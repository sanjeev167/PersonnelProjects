import com.admin.pvt.sec.rbac.monitor.modal.OperationAccess;
import com.admin.pvt.sec.rbac.monitor.repo.AccessRightsRbacRepository;
import com.admin.pvt.sec.rbac.monitor.repo.OperationAccessRepository;
